<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hhuebner.autogp.controllers.MainSceneController">
   <children>
      <BorderPane prefHeight="411.0" prefWidth="611.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Test" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <left>
            <VBox prefHeight="388.0" prefWidth="273.0" spacing="10.0" style="-fx-background-color: #e6e5dc;" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="7.0" prefWidth="176.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="132.0" text="Scale:" />
                        <TextField onKeyTyped="#onSetScale" prefHeight="25.0" prefWidth="196.0" />
                        <ChoiceBox prefHeight="25.0" prefWidth="49.0" fx:id="choiceBox" onAction="#onSetUnit" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="273.0">
                     <children>
                        <Label prefHeight="26.0" prefWidth="50.0" text="Rooms:" />
                        <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="222.0">
                           <children>
                              <Button mnemonicParsing="false" styleClass="agp-button" stylesheets="@style.css" text="+" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <ScrollPane prefHeight="200.0" prefWidth="200.0">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="272.0">
                           <children>
                              <TableView layoutX="-1.0" prefHeight="200.0" prefWidth="272.0">
                                <columns>
                                  <TableColumn prefWidth="75.0" text="Room" />
                                  <TableColumn prefWidth="75.0" text="Size" />
                                    <TableColumn prefWidth="75.0" text="Furniture" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </AnchorPane>
                    </content>
                  </ScrollPane>
                  <VBox alignment="BOTTOM_CENTER" prefHeight="74.0" prefWidth="273.0">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onGenerate" prefHeight="50.0" prefWidth="155.0" styleClass="agp-button" stylesheets="@style.css" text="Generate" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </left>
         <center>
            <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <fx:include fx:id="canvas" source="canvas.fxml" />
                  <ToolBar maxHeight="-Infinity" maxWidth="-Infinity" orientation="VERTICAL" prefHeight="140.0" prefWidth="62.0" StackPane.alignment="BOTTOM_RIGHT">
                    <items>
                        <Button mnemonicParsing="false" onAction="#onClickCursorTool" text="Cursor" />
                        <Button mnemonicParsing="false" onAction="#onClickMoveTool" text="Move" />
                        <Button mnemonicParsing="false" onAction="#onClickSelectTool" text="Select" />
                        <Button mnemonicParsing="false" onAction="#onClickRulerTool" text="Ruler" />
                    </items>
                  </ToolBar>
               </children>
            </StackPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
